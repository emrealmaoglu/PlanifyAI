# ============================================
# PlanifyAI pylint Configuration
# Created: 2025-11-03
# ============================================

[MASTER]
# Ignore patterns
ignore=venv,tests,docs,notebooks
# Use multiple processes for speed
jobs=4
# Pickle collected data
persistent=yes

[MESSAGES CONTROL]
# Disable specific warnings
disable=
    C0111,  # missing-docstring
    C0103,  # invalid-name
    R0913,  # too-many-arguments
    R0914,  # too-many-locals
    W0212,  # protected-access
    W0511,  # fixme

[FORMAT]
# Maximum line length
max-line-length=100
# Allow single-letter variable names
good-names=i,j,k,x,y,z,df,ax,fig

[DESIGN]
# Maximum arguments for function/method
max-args=8
# Maximum local variables
max-locals=20
# Maximum attributes for a class
max-attributes=15
# Maximum public methods for a class
max-public-methods=25

[SIMILARITIES]
# Minimum lines number for similarity check
min-similarity-lines=10

[BASIC]
# Naming conventions (snake_case)
function-naming-style=snake_case
class-naming-style=PascalCase
const-naming-style=UPPER_CASE
module-naming-style=snake_case
